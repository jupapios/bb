.game
	.alert_waiting
		background-color #F9EDBE
		border 1px solid #F0C36D
		border-radius 4px
		height 130px
		padding 4px 8px	
		position absolute
		margin-left -150px
		margin-top -65px
		top 50%
		left 50%
		width 300px

@media screen and (max-width: 400px)
	.intro
		.parasite
			display none

		.alert
			border 1px solid #F0C36D
			background-color #F9EDBE
			box-shadow 0 2px 4px rgba(0,0,0,.2)
			margin-top 50px
			padding 0 2%

		.alert
		.landspace
			display block

		.landspace
			margin auto

		.popup
			margin-left 10%
			margin-right 10%
			width 80%

		h1
		nav
			text-align left
			padding-left 20px

