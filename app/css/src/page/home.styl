.button
	text-decoration none
	border 1px solid #313
	border-radius 4px
	padding 4px 10px
	font-weight bold
	font-size 2em
	background #313
	box-shadow 1px 1px 8px #313
	color #E98

.joystick
	width 100%
	height 100%
	margin 0
	padding 0
	overflow hidden	
	user-select none
	position absolute
	top 0
	left 0
	z-index 999999


.first_state
.second_state
	h1
		color #313
		font-family font-3
		text-align center
	


.first_state
	h1
		font-size 7em

	input
		border-radius 2px
		border none
		box-shadow 1px 1px 2px #313
		margin auto
		padding 10px 20px
		width 400px

	input
	.button-continue
		display inline-block
		vertical-align top

	.button-continue
		background url("../img/continue.png") no-repeat
		height 78px
		width 60px

	.container
		text-align center
		width 100%

.second_state
	text-align center
	h1
		font-size 4em
		margin-top 0

	a
		position absolute

	.button-prev
		left 0px

	.button-next
		right 0px

	.players
		//margin auto
		//margin-left 280px
		position relative

		img
			left 280px
			opacity 0
			position absolute
			transition opacity 700ms linear
			top 0

			&.active
				opacity 1

	.button
		bottom 10px
		padding 0 20px
		transform rotate(4deg)
		right 10px


.third_state

	.new_game
		left 50%
		margin-top -900px
		position absolute
		transition all 400ms linear
		top 20px
		width 49%

		&.active
			margin-top 0

	.join_game
		left 50%
		margin-top -900px
		position absolute
		transition all 400ms linear
		top 20px
		width 49%

		&.active
			margin-top 0

		img
			margin 10px

		.deactive
			border 1px solid gray
			background-color white

	h1
		//font-family 'Henny Penny', cursive
		text-align center
		margin-top 0

	nav
		//font-family 'Henny Penny', cursive
		text-align center

		li
			margin-top 25px

			&:nth-child(1)
				transform rotate(-4deg)
			&:nth-child(2)
				transform rotate(1deg)
			&:nth-child(3)
				transform rotate(-3deg)
			&:nth-child(4)
				transform rotate(3deg)
		a
			/*padding 0px 10px
			text-decoration none

			&:visited
				text-decoration none*/
			text-decoration none
			border 1px solid #313
			border-radius 4px
			padding 4px 10px
			font-weight bold
			font-size 2em
			background #313
			box-shadow 1px 1px 8px #313
			color #E98

	.player
	.menu
		display inline-block
		vertical-align top

	.player
		margin-top 14px
		margin-left 100px
		margin-right 180px

	.menu
		transition all 500ms linear
		width 40%

		&.hide
			margin-top 610px


	.octo
	.parasite
		position absolute
		top 10px
		z-index -1

	.octo
		right 10px

	.parasite
		left 10px

	.alert
	.landspace
		display none

	.join_game
		input
			border-radius 4px
			border 1px solid #F0C36D
			padding 4px 8px
			box-sizing border-box
			width 100%
