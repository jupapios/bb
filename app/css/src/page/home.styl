.joystick
	width 100%
	height 100%
	margin 0
	padding 0
	overflow hidden	
	user-select none
	position absolute

.intro

	h1
		font-family 'Henny Penny', cursive
		text-align center

	nav
		font-family 'Henny Penny', cursive
		text-align center

		li
			margin-top 20px

		a
			padding 0px 10px
			text-decoration none

			&:visited
				text-decoration none

	.octo
	.parasite
		position absolute
		top 10px
		z-index -1

	.octo
		right 10px

	.parasite
		left 10px

	.alert
	.landspace
		display none

	.join_game
		input
			border-radius 4px
			border 1px solid #F0C36D
			padding 4px 8px
			box-sizing border-box
			width 100%
	.new_game
		img
			border 4px solid #F0C36D
			cursor pointer
			display inline-block
			/*margin-left auto
			margin-right auto*/

	.popup
		border 1px solid #F0C36D
		border-top none
		background-color #F9EDBE
		box-sizing border-box
		min-height 200px
		margin-right 20%
		margin-left 20%
		margin-top -100%
		padding 2%
		position absolute
		top 0
		transition margin-top linear 500ms
		width 60%

		&.active
			box-shadow 0 2px 4px rgba(0,0,0,.2)
			margin-top 0

			.close
				display block

		.img_container
			text-align center

		.play
			float right
			margin-top 15px				

		.close
			background url("../img/close.png") no-repeat center center
			bottom -10px
			display none
			height 20px
			font-family 'Henny Penny', cursive
			position absolute
			right @bottom
			width @height


.game
	.alert_waiting
		background-color #F9EDBE
		border 1px solid #F0C36D
		border-radius 4px
		height 130px
		padding 4px 8px	
		position absolute
		margin-left -150px
		margin-top -65px
		top 50%
		left 50%
		width 300px

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px)
	.intro
		.parasite
			display none

		.alert
			border 1px solid #F0C36D
			background-color #F9EDBE
			box-shadow 0 2px 4px rgba(0,0,0,.2)
			margin-top 50px
			padding 0 2%

		.alert
		.landspace
			display block

		.landspace
			margin auto

		.popup
			margin-left 10%
			margin-right 10%
			width 80%

		h1
		nav
			text-align left
			padding-left 20px

canvas
	position absolute !important
	top 0
	left 0
