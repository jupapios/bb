.profile
	background-color color-base-5

	nav
		ul
			text-align center
		li
			color white
			display inline-block
			margin 10px
			text-decoration underline

	.badges
		padding 10px 20px
		text-align center

		.badge
			display inline-block
			height 280px
			position relative
			perspective 600px
			margin 0 10px
			width 250px

			&.active
				.front
					z-index 900
					border-color #eee
					transform rotateY(-180deg)

				.back
					z-index 1000
					transform rotateX(0deg) rotateY(0deg)

			.face
				float none
				position absolute
				//border-radius 2px
				top 0
				left 0
				width inherit
				height inherit
				//border 1px solid #ccc
				transform-style preserve-3d
				backface-visibility hidden
				transition all .4s ease-in-out

				ul
					list-style none
					text-align left
				p
					color white
				img
					margin-right 8px
					margin-top 10px
					vertical-align bottom
				

			.front
				//background-color rgba(255,255,255,.2)
				border 1px solid transparent
				text-align center
				//box-shadow 1px 1px 4px rgba(0,0,0,0.5)
				transform rotateX(0deg) rotateY(0deg)
				z-index 900

				p
					text-decoration underline


			.back
				background-color rgba(255,255,255,.2)
				//border 1px solid rgba(255,255,255,.2)
				box-sizing border-box
				box-shadow 2px 2px 5px rgba(0,0,0,0.4)
				padding 0 30px
				transform rotateY(180deg)
				z-index 800

				h2
					color white
					text-transform uppercase

				a
				a:visited
					color color-highlight2-4
	.ball
		box-shadow 0 0 0 4px color-base-5, 0 0 0 8px color-highlight2-3

	.permanent
		display none